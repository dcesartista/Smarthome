<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.ugm.smartcity.smarthome.View.Dashboard.Fragment.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blueDark"
        android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monthly_usage"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <View
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:background="@drawable/chart_back_blue"
                    />
                <com.hookedonplay.decoviewlib.DecoView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:id="@+id/arc_view"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/tv_energy_consumption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/blueLight"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="@string/energy_consumption"/>
                        <TextView
                            android:id="@+id/tv_energy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_energy_consumption"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:textSize="64sp"
                            tools:text="1942" />
                        <TextView
                            android:id="@+id/tv_kwh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kwh"
                            android:textColor="@color/blueLight"
                            android:layout_alignBaseline="@+id/tv_energy"
                            android:layout_alignBottom="@+id/tv_energy"
                            android:layout_toRightOf="@+id/tv_energy"
                            android:layout_toEndOf="@+id/tv_energy" />
                        <TextView
                            android:id="@+id/tv_rp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rp"
                            android:textColor="@color/greenLight"
                            android:visibility="gone"
                            android:layout_alignBaseline="@+id/tv_energy"
                            android:layout_alignBottom="@+id/tv_energy"
                            android:layout_toLeftOf="@+id/tv_energy"
                            android:layout_toStartOf="@+id/tv_energy" />
                        <TextView
                            android:id="@+id/tv_monthly_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_energy"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/blueLight"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-condensed"
                            tools:text="monthly limit : 40000 Kwh"/>
                    </RelativeLayout>
                </LinearLayout>


            </FrameLayout>


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/spinner_white_rounded"
                android:layout_marginTop="16dp"
                android:textColor="@color/blueDark"
                android:layout_gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="16sp"
                android:text="17 Jun 2017" />

            <RelativeLayout
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_rupiah"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_rupiah"/>
                <TextView
                    android:id="@+id/tv_biaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_rupiah"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Total Cost Rp 58.000"
                    android:textColor="@color/greenDark"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_cost_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_rupiah"
                    android:layout_below="@id/tv_biaya"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Monthly limit Rp 240.000"
                    android:textColor="@color/textLightGrey"
                    android:textSize="12sp" />
                <ProgressBar
                    android:id="@+id/progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/iv_rupiah"
                    android:layout_below="@id/tv_cost_limit"
                    android:maxHeight="6dp"
                    android:minHeight="6dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/green_progressbar" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightGrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="Notifikasi"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/background_accent_rounded"/>
            <LinearLayout
                android:id="@+id/alert_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <TextView
                android:id="@+id/tv_show_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_all_notif"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorAccent"/>
            <FrameLayout
                android:id="@+id/pb_notif"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="1">
                <ProgressBar
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text=""/>
            </FrameLayout>
        </LinearLayout>



    </LinearLayout>
</ScrollView>



