<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.ac.ugm.smartcity.smarthome.View.ACActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/fa_arrow_left"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="AC Ruang Dapur"/>
        </FrameLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_ac"
            android:layout_width="match_parent"
            android:layout_height="32dp">

        </android.support.v7.widget.Toolbar>
        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panasonic"
            android:gravity="center"
            android:textSize="20sp"/>
        <RelativeLayout
            android:id="@+id/ll_temp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_centerInParent="true"
                android:textSize="90sp"
                android:text="26"/>
            <TextView
                android:id="@+id/tv_celcius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â°C"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="8dp"
                android:layout_alignTop="@id/tv_temp"
                android:layout_toRightOf="@id/tv_temp"
                android:textSize="32sp"
                android:layout_gravity="top"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_mode"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_hot"/>
            <TextView
                android:id="@+id/tv_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Mode Normal"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_speed_swing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_speed"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_history"/>
            <TextView
                android:id="@+id/tv_speed"
                android:layout_toRightOf="@id/ic_speed"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Speed Low"/>
            <TextView
                android:id="@+id/tv_swing"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Swing"/>
            <ImageView
                android:id="@+id/ic_swing"
                android:layout_toLeftOf="@id/tv_swing"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_history"/>

        </RelativeLayout>
        <FrameLayout
            android:id="@+id/tv_off"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_ac_off"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_power"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Power"
            android:textSize="16sp"
            android:layout_marginRight="1dp"
            android:background="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mode"
            android:textSize="16sp"
            android:layout_marginLeft="1dp"
            android:background="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_temp_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="48sp"
            android:background="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Temp"
            android:textColor="@color/hintColor"
            android:textSize="16sp"
            android:background="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_temp_up"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="32sp"
            android:background="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_speed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Speed"
            android:textSize="16sp"
            android:layout_marginRight="1dp"
            android:background="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_swing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Swing"
            android:textSize="16sp"
            android:layout_marginLeft="1dp"
            android:background="@color/white"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
